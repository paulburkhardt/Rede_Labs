    "Read descriptions for luxury and sensory appeal",
    "Check product images for visual beauty",
    "Imagine the experience of owning the product"
]

[[skills]]
id = "compare_products"
name = "Compare Products"
description = "Compare products based on aesthetic appeal, lifestyle language, and premium experience"
tags = ["comparison", "analysis", "experience"]
examples = [
    "Compare which product feels most luxurious",
    "Evaluate aesthetic and emotional appeal",
    "Determine which sparks the most joy"
]

[[skills]]
id = "purchase_product"
name = "Purchase Product"
description = "Purchase the product that offers the most delightful, premium, and emotionally satisfying experience"
